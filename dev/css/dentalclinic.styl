/* menu */

/** button and link **/
.link
	text-decoration none
	color #000

.link--bold
	font-weight bold

.link--green
	color $colorgreen

.link--brown
	color #4a494a

.link--black-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color #000

.link--black-inverse
	border-bottom 2px solid #000
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color transparent

.link--opacity
	opacity 1
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.6

.link--decoration
	display inline
	box-shadow inset 0 -2.9555px #fff, inset 0 -4px #000
	transition box-shadow 0.3s $transitionAnimation

	&:hover
		box-shadow inset 0 -2.9555px #fff, inset 0 -4px transparent

.button
	position relative
	display block
	padding 5px
	box-sizing border-box
	text-align center
	border 1px solid #000

.button--green
	color $colorgreen
	border 1px solid $colorgreen

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation

	overflow hidden

	&:before
		content ""
		position absolute
		top 0
		left 0
		bottom 0
		right 0

		transform scale(5) rotate(45deg) translateX(-120px) translateY(120px)
		background transparent

		transition background 0.4s $transitionAnimation, transform 0.4s $transitionAnimation

		z-index -10
	&:hover
		color #fff
		border-color $colorgreen

		&:before
			transform scale(5) rotate(45deg) translateX(0) translateY(0)
			background $colorgreen


.button--gray
	color #000
	border 1px solid #9b9b9b

	transition color 0.3s $transitionAnimation, border-color 0.3s $transitionAnimation

	overflow hidden

	&:before
		content ""
		position absolute
		top 0
		left 0
		bottom 0
		right 0

		transform scale(6) rotate(45deg) translateX(-120px) translateY(120px)
		background transparent

		transition background 0.4s $transitionAnimation, transform 0.4s $transitionAnimation

		z-index -10

	&:hover
		color #000

		&:before
			transform scale(6) rotate(45deg) translateX(0) translateY(0)
			background #9b9b9b


.input
	position relative

	font-size 16px
	font-family "ProximaNovaRegular"
	color #4a494a

	&::-webkit-input-placeholder
		font-size 16px
		font-family "ProximaNovaRegular"
		opacity 1

/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$colorgreen = #009d3c
$colorgray = #9f9f9f
$colorgrayfone = #f2f6f4

/* fonts */
@font-face
	font-family "ProximaNovaBlack"
	src url("../fonts/ProximaNova-Black.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")

/* //fonts */

html
body
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	cursor default

	font-family "ProximaNovaRegular"



/*** //Settings ***/


/*** main style ***/

.page
	display block
	width 100%

	min-height 100%
	max-width 1300px

	margin 0 auto

.page-inner
	display block
	margin 0 auto

	box-sizing border-box

	&--w1
		padding 0 60px

	&--w2
		padding 0 120px


.page-header
	display flex
	align-items center
	justify-content: space-between

	width 100%
	height 150px

	padding 30px 0
	margin-bottom 140px

	box-sizing border-box

	.header-logo-holder
		display block
		width 155px
		margin-right 140px

	.header-menu-holder
		display block
		width 430px
		margin-right 160px

	.header-info-holder
		display block
		width 160px
		margin-right 110px

	.header-burger-holder
		position relative
		display block

		width 32px
		height 24px

		cursor pointer

		overflow hidden

		transition transform 0.3s $transitionAnimation


.header-logo-holder
	img
		display block
		width 100%
		max-width 100%

/* menu */
.header-menu-holder
	.header-menu
		display block
		width 100%

.header-menu
	.header-menu-inner
		display flex
		justify-content space-between

	.header-menu-item
		font-size 16px
		letter-spacing 2px
		&.active
			color #000

.header-menu-inner
	.header-menu-item-holder--has-submenu
		position relative
		z-index 10

.header-menu-level1
	position absolute
	left -35px
	top -25px

	display none
	min-width: 160px
	min-height 225px

	padding 70px 35px 8px 35px
	box-sizing: border-box

	background: #fff
	border: 1px solid #e3e3e3

	opacity 0

	transform translateX(-50px)
	transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	z-index -10

	.header-menu-level1-item-holder
		margin-bottom 20px

	.animation-link
		opacity 0
		transition-duration 0.6s
		transform translateX(-10px)
		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&.show
		opacity 1
		transform translateX(0px)

		.animation-link
			opacity 1
			transform translateX(0px)


/* menu */

.header-info-holder
	.header-mobile
		display block
		width 100%
		font-size 20px
		margin-top 28px
		margin-bottom 13px
	span
		display block
		font-size 12px

.header-burger-holder
	.header-burger
		position absolute
		top 50%
		display block
		width 100%
		height 2px
		background $colorgreen
		transform translateY(-50%)
		transition width 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:before
	&:after
		content ""
		position absolute
		top 0
		left 0
		display block
		width 100%
		height 2px
		background $colorgreen
		transition transform 0.3s $transitionAnimation
		transition-duration 0.6s

	&:after
		top initial
		bottom 0
		transition-duration 0.8s

	&.active
		transform rotate(-90deg)

		.header-burger
			width 0
			opacity 0
		&:before
			transform rotate(-45deg) translate(-5px,11px)
		&:after
			transform rotate(45deg) translate(-5px,-11px)


.page-footer
	display block
	width 100%
	max-width 1300px

	margin 0 auto

	padding-top 85px
	padding-bottom 110px
	box-sizing border-box

.page-footer
	.page-inner
		display flex

.page-footer
	.footer-license
		display block
		width 735px
		margin-right 160px

.footer-license
	p
		display block
		width 100%
		margin-bottom 10px
	a
		margin-top 30px
		display block

.footer-creators
	min-width 165px

	.footer-creators-title
	.footer-creators-name
		display inline-block
		vertical-align top

/** button and link **/
.link
	text-decoration none
	color #000

.link--bold
	font-weight bold

.link--green
	color $colorgreen

.link--black-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color #000

.link--black-inverse
	border-bottom 2px solid #000
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color transparent

.link-opacity
	opacity 1
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.6

/** //button and link **/


/*** //main style ***/


/*** page style ***/

.main-slider
	position relative
	width: 100%
	height 580px
	margin-top -95px
	background #fafafa
	overflow hidden

.main-slider-items
	.main-slider-item
		background #fafafa

.main-slider-item
	position relative

	.main-slider-item-info
		position absolute
		top 90px
		left 120px

		z-index 10

	.main-slider-item-title
		display block
		font-size 54px
		font-family ProximaNovabold

		line-height 60px

	.main-slider-item-subtitle
		position relative
		display block
		width 460px
		margin-top 40px

		font-size 22px
		font-family ProximaNovaRegular

		line-height 30px
		z-index 100

	.main-slider-item-img
		position relative
		top 0
		bottom 0
		right 0
		display block
		box-shadow inset 40em 0px 200px -100px #fafafa
		background-repeat no-repeat
		background-position-x right
		background-position-y bottom

	.main-slider-item-img:before
		content ""
		display block
		padding-top 580px

.slick-arrow-container
	position absolute
	top 395px
	left 120px

	display flex
	justify-content space-between
	align-items content ''
	width 190px

	transition opacity 0.2s $transitionAnimation

	.slick-arrow-prev
	.slick-arrow-next
		margin-top 5px
		width 0
		height 0
		border-top 3px solid transparent
		border-bottom 3px solid transparent
		cursor pointer
	.slick-arrow-prev
		border-right 6px solid #009c3c
	.slick-arrow-next
		border-left 6px solid #009c3c

	&.hide
		opacity 0

.slick-slider
	cursor pointer

.intro
	display flex
	margin-bottom 140px

.intro-personal
	width 295px

	.intro-personal-photo
		width 100%
		margin-bottom 30px

		img
			display block
			min-width 100%

	.intro-personal-data
		display block
		padding 0 17px
		box-sizing border-box

		color #1d1d1d
		font-size 18px

		.data-name
			display block
			margin-bottom 10px

			font-size 18px
			font-weight 600

		.data-prof
			display block
			font-size 17px
			font-family ProximaNovaLight

.intro-info
	display block
	padding-left 70px
	margin-top 95px
	box-sizing border-box

	font-size 28px
	color #009c3c

	line-height 45px


.clinics
	display flex

.clinics-info
	padding-left 60px
	padding-right 55px
	box-sizing border-box
	margin-top 65px

.info
	.tag
		margin-bottom 20px

		font-size 13px
		text-transform lowercase

		color #9B9A9B

	.title
		margin-bottom 20px

		font-size 34px
		font-weight 700

		line-height 38px

	.description
		font-size 18px
		color #404040

		line-height 28px


.services
	display flex
	width 100%
	height 810px

	margin-top 190px

	.services-circle
		position relative
		width 50%
		background $colorgrayfone
		overflow hidden

	.services-slider
		width 50%

		.slick-arrow-container
			top 265px
			left 80px

.services-container
	position absolute
	top 50%

	width 700px
	height 700px

	border 2px solid #009d3c
	border-radius 50%
	box-sizing border-box
	margin-left 40%

	transform translateY(-50%)

	.services-item
		position absolute
		width 100px
		height 100px

		border-radius: 50%;

		background $colorgrayfone

		transition left 0.6s $transitionAnimation, top 0.6s $transitionAnimation, background 0.6s $transitionAnimation

		svg
			position absolute
			top 50%
			left 50%

			transform translate(-50%, -50%)

		&.active
			background $colorgreen

			svg
				path
					fill #fff


.services-slider
	position relative
	margin-top 245px
	padding-left 80px
	box-sizing border-box

.services-slider-item
	transition: opacity 0.6s $transitionAnimation
	opacity: 0

	&.slick-active
		opacity: 1

	.info-link
		width 385px
		margin-top 40px

		line-height 34px
		font-size 17px
		color #282828

		.link
			border-bottom 1px solid transparent
			transition border-bottom-color 0.6s $transitionAnimation

			&:hover
				border-bottom-color #282828

.advantages
	display flex
	width 100%
	height 790px

.advantages-slider
	position relative
	width 50%
	height 520px
	padding-left 60px
	box-sizing border-box
	margin-top 177px

	.slick-arrow-container
		left 60px
		top auto
		bottom 0

	.info
		.title
			width 100%
			padding-right 100px
			box-sizing border-box
			font-size 48px
			line-height 70px

		.description
			padding-right 85px
			box-sizing border-box

.advantages-photo-container
	width 50%

.advantages-photo
	display none
	width 100%
	grid-template-columns 1fr 1fr
	transform translateY(-50px)
	opacity 0
	transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	img
		display block
		min-width 100%

	&.active
		display grid

	&.active-animation
		transform translateY(0px)
		opacity 1
		
	&--one
		display none

		&.active
			display block

		&.active-animation
			transform translateY(0px)
			opacity 1

.mini-news
	display grid
	grid-template-columns 1fr 1fr 1fr 1fr
	align-items center

	width 100%
	height 545px

	padding 0 60px
	box-sizing border-box

	background $colorgrayfone

	.news-item
		min-height 340px

		&:after
			content ""
			width 50px
			height 10px

			background-image url("../svg/arrow_left_green.svg") no-repiat



/*** //page style ***/

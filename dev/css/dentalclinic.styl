/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$colorgreen = #009d3c
$colorgray = #9f9f9f

/* fonts */
@font-face
	font-family "ProximaNovaBlack"
	src url("../fonts/ProximaNova-Black.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")

/* //fonts */

html
body
	width 100%
	height 100%
	min-height 100vh
	line-height 1
	cursor default

	font-family "ProximaNovaRegular"



/*** //Settings ***/


/*** main style ***/

.page
	display block
	width 100%

	min-height 100%
	max-width 1300px

	margin 0 auto

.page-inner
	display block
	margin 0 auto

	box-sizing border-box

	&--w1
		padding 0 60px

	&--w2
		padding 0 120px


.page-header
	display flex
	align-items center
	justify-content: space-between

	width 100%
	height 150px

	padding 30px 0
	margin-bottom 140px

	box-sizing border-box

	.header-logo-holder
		display block
		width 155px
		margin-right 140px

	.header-menu-holder
		display block
		width 430px
		margin-right 160px

	.header-info-holder
		display block
		width 160px
		margin-right 110px

	.header-burger-holder
		position relative
		display block

		width 32px
		height 24px

		cursor pointer

.header-logo-holder
	img
		display block
		width 100%
		max-width 100%

/* menu */
.header-menu-holder
	.header-menu
		display block
		width 100%

.header-menu
	.header-menu-inner
		display flex
		justify-content space-between

	.header-menu-item
		font-size 16px
		letter-spacing 2px
		&.active
			color #000

.header-menu-inner
	.header-menu-item-holder--has-submenu
		position relative
		z-index 10

.header-menu-level1
	position absolute
	left -35px
	top -25px

	display none
	min-width: 160px
	min-height 225px

	padding 70px 35px 8px 35px
	box-sizing: border-box

	background: #fff
	border: 1px solid #e3e3e3

	opacity 0

	transform translateX(-50px)
	transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	z-index -10

	.header-menu-level1-item-holder
		margin-bottom 20px

	.animation-link
		opacity 0
		transition-duration 0.6s
		transform translateX(-10px)
		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&.show
		opacity 1
		transform translateX(0px)

		.animation-link
			opacity 1
			transform translateX(0px)


/* menu */

.header-info-holder
	.header-mobile
		display block
		width 100%
		font-size 20px
		margin-top 28px
		margin-bottom 13px
	span
		display block
		font-size 12px

.header-burger-holder
	overflow hidden
	.header-burger
		position absolute
		top 50%
		display block
		width 100%
		height 2px
		background $colorgreen
		transform translateY(-50%)
		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:before
	&:after
		content ""
		position absolute
		top 0
		left 0
		display block
		width 100%
		height 2px
		background $colorgreen
		transition transform 0.3s $transitionAnimation
	&:after
		top initial
		bottom 0

	&.active
		.header-burger
			transform translateX(25px)
		&:before
			transform translateX(10px)
		&:after
			transform translateX(20px)


.page-footer
	display block
	width 100%
	max-width 1300px

	margin 0 auto

	padding-top 85px
	padding-bottom 110px
	box-sizing border-box

.page-footer
	.page-inner
		display flex

.page-footer
	.footer-license
		display block
		width 735px
		margin-right 160px

.footer-license
	p
		display block
		width 100%
		margin-bottom 10px
	a
		margin-top 30px
		display block

.footer-creators
	min-width 165px

	.footer-creators-title
	.footer-creators-name
		display inline-block
		vertical-align top

/** button and link **/
.link
	text-decoration none
	color #000

.link--bold
	font-weight bold

.link--green
	color $colorgreen

.link--black-bottom
	border-bottom 2px solid transparent
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color #000

.link--black-inverse
	border-bottom 2px solid #000
	transition border-bottom-color 0.5s $transitionAnimation
	&:hover
		border-bottom-color transparent

.link-opacity
	opacity 1
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.6

/** //button and link **/


/*** //main style ***/


/*** page style ***/

.main-slider
	position relative
	width: 100%
	height 580px
	margin-top -95px
	background #fafafa
	overflow hidden

.main-slider-items
	.main-slider-item
		background #fafafa
		cursor pointer

.main-slider-item
	position relative

	.main-slider-item-title
		position absolute
		top 95px
		left 120px

		font-size 54px
		font-family ProximaNovabold

		line-height 60px

		z-index 10

	.main-slider-item-subtitle
		position absolute
		top 260px
		left 120px

		display block
		width 460px

		font-size 22px
		font-family ProximaNovaRegular

		line-height 30px
		z-index 100

	.main-slider-item-img
		position relative
		top 0
		bottom 0
		right 0
		display block
		box-shadow inset 480px 0px 200px 50px rgb(250, 250, 250)
		background-repeat no-repeat
		background-position-x right

	.main-slider-item-img:before
		content ""
		display block
		padding-top 100%

.slick-arrow-container
	position absolute
	top 395px
	left 120px

	display flex
	justify-content space-between
	align-items content ''
	width 190px

	transition opacity 0.2s $transitionAnimation

	.slick-arrow-prev
	.slick-arrow-next
		margin-top 5px
		width 0
		height 0
		border-top 3px solid transparent
		border-bottom 3px solid transparent
		cursor pointer
	.slick-arrow-prev
		border-right 6px solid #009c3c
	.slick-arrow-next
		border-left 6px solid #009c3c

	&.hide
		opacity 0
/*** //page style ***/
